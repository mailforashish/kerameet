<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/backgroundStart" />
            <stroke android:width="1dp" android:color="@color/backgroundEnd" />
            <corners android:radius="1dip"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/backgroundStart" android:startColor="@color/backgroundStart" />
            <stroke android:width="0dp" android:color="@color/backgroundEnd" />
            <corners android:radius="1dip"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>
        </shape>
    </item>
</selector>