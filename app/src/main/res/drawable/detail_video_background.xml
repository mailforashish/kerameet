<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffff4c75" android:endColor="#ffff6544" android:angle="0"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/color_FFFF6C57" android:endColor="@color/backgroundStart" android:angle="180"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
